<?xml version="1.0"?>
<launch>
  <arg name="use_sim_time" default="true" />
  <arg name="gui" default="true" />
  <arg name="headless" default="false" />
  <arg name="world_name" default="$(find rmua_bot_description)/worlds/rmuamap.world" />
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="debug" value="0" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="use_sim_time" value="$(arg use_sim_time)" />
    <arg name="headless" value="$(arg headless)" />
    <arg name="world_name" value="$(arg world_name)" />
    <arg name="paused" value="false"/>
  </include>

<!-- Load robot description -->
<include file="$(find rmua_bot_description)/launch/rmua_bot_description.launch" />

<!-- Spawn the robot -->
<node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"  
        args="-urdf -model rmua_robot -param robot_description -x 0.5 -y 0.5 -z 0.5 " />

<!--load joint controller configurations from yaml file to parameter server -->
<rosparam file="$(find rmua_bot_description)/config/rmua_bot_control.yaml" command="load"/>
<!--load controllers-->
<node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="rmua_robot" args="rmua_robot_joint_state_controller yaw_position_controller pitch_position_controller"/>

</launch>
