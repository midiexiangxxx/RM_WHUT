<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="chassis_wheel_r">
  <xacro:macro name="chassis_wheel_r" params="prefix parant xyz rpy">
    <!--xacro:property name="gripper_side" value="${side[0]}" scope="local"/-->
    <xacro:property name="pi" value="3.1415926535897931" />
    <!-- Base of end effector -->
    <joint name="${prefix}_wheel_r_joint" type="continuous">
      <origin xyz="${xyz}" rpy="${rpy}" />
      <parent link="${parant}"/>
      <child link="${prefix}_wheel_r" />
      <axis xyz="0 1 0"/>
    </joint>
    <link name="${prefix}_wheel_r">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://rmua_bot_description/meshes/wheel_right.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="${pi/2} 0 0" xyz="0.0 0.0 0"/>
        <geometry>
          <cylinder length="0.0452" radius="0.0758"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="${pi/2} 0 0" xyz="0.0 0.0 0.0"/>
        <mass value="0.4"/>
        <inertia ixx="0.0006426653333333334" ixy="0" ixz="0" iyy="0.0006426653333333334" iyz="0" izz="0.0011491280000000001"/>
      </inertial>
    </link>
  </xacro:macro>
</robot>
